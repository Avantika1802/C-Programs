#include <stdio.h>

int main() {
    int n;
    scanf("%d",&n);
    
    for(int i=n; i>=1; i--){
        for(int j=n; j>=i; j--){
            printf("%d ",j);
        }
        for(int j=1; j<=(i*2)-1; j++){
            printf(" ");
        }
        for(int j=1; j<=n-i+1; j++){
            printf("%d ",i+j-1);
        }
        printf("\n");
    }
    for(int i=n; i>=1; i--){
        printf("%d ",i);
    }
    for(int i=0; i<=n; i++){
        printf("%d ",i);
    }
    printf("\n");
    for(int i=1; i<=n; i++){
        for(int j=n; j>=i; j--){
            printf("%d ",j);
        }
         for(int j=1; j<=(i*2)-1; j++){
            printf(" ");
        }
         for(int j=i; j<=n; j++){
            printf("%d ",j);
        }
        printf("\n");
    }
    return 0;
}
